{
  "appId": "com.test.curate",
  "appName": "Curate",
  "webDir": "dist",
  "icon": "assets/icon.png",
  "server": {
    "androidScheme": "https"
  },
  "ios": {
    "minVersion": "13.0"
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": false,
    "webContentsDebuggingEnabled": true,
    "overrideUserAgent": "Mozilla/5.0 (Linux; Android 13; Pixel 7) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Mobile Safari/537.36",
    "appendUserAgent": "CapacitorWebView"
  },
  "plugins": {
    "App": {
      "urlScheme": "Curate"
    },
    "Keyboard": {
      "resize": "native",
      "style": "native",
      "resizeOnFullScreen": true
    },
    "SplashScreen": {
      "launchAutoHide": true,
      "launchShowDuration": 500,
      "backgroundColor": "#88b7b5",
      "showSpinner": false,
      "androidSplashResourceName": "splash_background"
    }
  }
}